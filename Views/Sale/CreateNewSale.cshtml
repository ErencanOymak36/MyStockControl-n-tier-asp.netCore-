@model MyStockControl.Entities.Domain.Sale
@{
    ViewData["Title"] = "CreateNewSale";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h1>Satış Bilgisi Gir</h1>


<form method="post" asp-controller="Sale" asp-action="CreateNewSale" class="form-group">
    <label>Ürün Adı</label>
     @Html.DropDownListFor(p=>p.ProductId,(List<SelectListItem>)ViewBag.productdata,new {  @class="form-control"})

    <label>Müşteri Adı</label>
    @Html.DropDownListFor(c=>c.CustomerId,(List<SelectListItem>)ViewBag.customerdata,new {  @class="form-control"})

    <label>Ürün Adeti</label>
    <input class="form-control" type="text" name="Quantity" required />

    <label>Ürün Fiyatı</label>
    <input class="form-control" type="text" name="Price" required />


    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Ekle</button>

    </div>
</form>

