@using MyStockControl.Entities.Domain
@model List<Category>
@{
    ViewData["Title"] = "GetCategoryList";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h1>Kategoriler</h1>
<div>
    <a href="#" data-toggle="modal" data-target="#AddCategoryModal" class=" btn btn-primary" style="float:right;margin-bottom:10px;">Yeni Kategori Ekle</a>

    <table class="table table-hover" id="CategoryTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kategori ADI</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var catogry in Model)
            {
                <tr>
                    <td>@catogry.CategoryId</td>
                    <td>@catogry.Name</td>
                    <td>
                        <a href="/Category/UpdateCategoryPage/@catogry.CategoryId" class="btn btn-success">Güncelle</a>
                        <a href="/Category/DeleteCategory/@catogry.CategoryId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


<div class="modal" id="AddCategoryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Yeni Kategori</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Category" asp-action="AddNewCategory" class="form-group">
                    <label>İsim</label>
                    <input class="form-control" type="text" name="Name" required />
                    

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



<script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#CategoryTable').DataTable(
        {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }
        }
    );
</script>




